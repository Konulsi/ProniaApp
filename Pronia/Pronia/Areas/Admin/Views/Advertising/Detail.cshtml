@model Advertising
@{
    ViewData["Title"] = "Detail";
}



<div class="container my-5">
    <form class="forms-sample" asp-action="Edit" method="post" enctype="multipart/form-data">

        <div class="mt-3" >

                <img src="~/assets/images/website-images//@Model.Image" style="width: 250px; height: 250px;" />

        </div>

        <div class="mt-3">
            <label for="formFile" class="form-label my-2">Name</label>
            <input class="form-control" id="customFile" disabled asp-for="Name" />
        </div>
        <div class="mt-3">
            <label for="formFile" class="form-label my-2">Description</label>
            <input type="text" step=".01" class="form-control" id="customFile" disabled asp-for="Description" />
        </div>

        <div class="buttons my-3">

            <a class="btn btn-light" asp-action="Index">Back</a>
        </div>
        
    </form>

</div>

@section Scripts{

        <partial name="_ValidationScriptsPartial" />
        <script src="~/ckeditor/ckeditor.js"></script> 
        <script>
            CKEDITOR.replace("description-text")  
        </script>

 }





