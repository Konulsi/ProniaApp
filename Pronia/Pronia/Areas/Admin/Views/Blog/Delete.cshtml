@model Blog
@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">

    <div class="form-group">
        <label class="my-2">Name</label>
        <input class="form-control" disabled id="customFile" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label class="my-2">Description</label>
        <select class="form-control" id="customFile" asp-for="AuthorId" asp-items="@ViewBag.authors"></select>
        <span class="text-danger" asp-validation-for="Author"></span>
    </div>


    <div class="form-group">
        <label class="my-2">Description</label>
        <textarea class="form-control" id="description-text" asp-for="Description" rows="5"></textarea>

    </div>
    <div class="form-group">
        @foreach (var item in Model.Images)
        {
            <img src="~/img/@item.Image" style="width:150px;height:150px;" />
        }

    </div>

    <div class="form-group">
        <h3 class="text-danger">Are you sure to delete blog ?</h3>
    </div>

    <form asp-action="Delete" method="post">
        <div class="form-group">
            <div class="buttons my-3">
                <button type="submit" class="btn btn-primary">Delete</button>
                <a class="btn btn-light" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("description-text");
    </script>
}