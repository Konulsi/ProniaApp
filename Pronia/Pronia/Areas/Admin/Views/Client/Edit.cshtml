@model ClientUpdateVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container my-5">
    <h1>Edit</h1>

    <div class="img-detail">
        <img src="~/assets/images/website-images//@Model.Image" style="width:250px;height:200px" />
    </div>

    <form class="form-sample" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Choose Photo</label>
            <input class="form-control" id="customFile" asp-for="Photo" />
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>

        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add name</label>
            <input class="form-control" id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name">@ViewBag.error</span>
        </div>
        
        <div class="form-group">
            <label for="formFile" class="form-label my-2">Add description</label>
            <input class="form-control" id="customFile" asp-for="Description" />
            <span class="text-danger" asp-validation-for="Description">@ViewBag.error</span>
        </div>


        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>


    </form>

</div>




@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}






