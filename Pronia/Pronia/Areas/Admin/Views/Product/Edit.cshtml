@model ProductUpdateVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container my-5">
    <div class="product-images d-flex ">
        @foreach (var item in Model.Images)
        {
            <div class="trash-icon" data-id="@item.Id">
                <img src="~/assets/images/website-images//@item.Image" style="width:150px;height:150px;" />
                @*<i style="font-size:22px;color:red;cursor:pointer;" class="fa-solid fa-trash-can"></i>*@
            </div>
        }

    </div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="my-2">Name</label>
            <input class="form-control " id="customFile" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Description</label>
            <textarea class="form-control" id="description-text" asp-for="Description" rows="5"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Price</label>
            <input type="number" step=".01" class="form-control" id="customFile" asp-for="Price" />
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Sale count</label>
            <input class="form-control" id="customFile" asp-for="SaleCount" />
            <span class="text-danger" asp-validation-for="SaleCount"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Stock count</label>
            <input class="form-control" id="customFile" asp-for="StockCount" />
            <span class="text-danger" asp-validation-for="StockCount"></span>
        </div>
        <div class="form-group">
            <label class="my-2">Add Color</label>
            <select class="form-control" id="customFile" asp-for="ColorId" asp-items="@ViewBag.colors"></select>
        </div>
        <div class="form-group">
            <label class="my-2">Add Size</label>
            <select class="form-control" id="customFile" asp-for="SizeIds" asp-items="@ViewBag.sizes"></select>
        </div>
        <div class="form-group">
            <label class="my-2">Add Tag</label>
            <select class="form-control" id="customFile" asp-for="TagIds" asp-items="@ViewBag.tags"></select>
        </div>
        <div class="form-group">
            <label class="my-2">Add Category</label>
            <select class="form-control" id="customFile" asp-for="CategoryIds" asp-items="@ViewBag.categories"></select>
        </div>


        <div class="form-group">
            <label class="my-2">Images</label>
            <input class="form-control" id="customFile" asp-for="Photos" />
        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("description-text");
    </script>
}



