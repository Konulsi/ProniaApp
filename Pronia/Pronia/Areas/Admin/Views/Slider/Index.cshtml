@model List<Slider>
@{
    ViewData["Title"] = "Index";
}


<div class="container my-5">
    <a class="btn btn-success" style="float: right;" asp-action="Create">Create</a>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>

                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var slider in Model)
                {
                    <tr>
                        <td class="py-1">
                            <img src="~/assets/images/website-images//@slider.Image" style="width: 70px; height: 70px" alt="image" />
                        </td>
                        <td class="py-1">
                            @slider.Title
                        </td>

                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@slider.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@slider.Id">Edit</a>

                            <form asp-action="Delete" asp-route-id="@slider.Id" method="post" style="display: inline-block">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>

@section Scripts{
    <script src="~/Admin/js/admin.js"></script>
}



